<script>
import { gsap } from 'gsap';
import { ScrollTrigger } from 'gsap/ScrollTrigger';

gsap.registerPlugin(ScrollTrigger);

document.addEventListener('DOMContentLoaded', () => {
  gsap.from("#services-section h2", {
    scrollTrigger: {
      trigger: "#services-section",
      start: "top 80%",
      toggleActions: "play none none none"
    },
    y: 20,
    opacity: 0,
    duration: 0.8,
    ease: "power2.out"
  });

  gsap.from("#services-section p:first-of-type", {
    scrollTrigger: {
      trigger: "#services-section",
      start: "top 75%",
      toggleActions: "play none none none"
    },
    y: 20,
    opacity: 0,
    duration: 0.8,
    delay: 0.1,
    ease: "power2.out"
  });

  gsap.utils.toArray("#services-section .flex-col").forEach((card, index) => {
    if (card instanceof HTMLElement) {
      gsap.from(card, {
        scrollTrigger: {
          trigger: card,
          start: "top 80%",
          toggleActions: "play none none none"
        },
        y: 30,
        opacity: 0,
        duration: 0.6,
        delay: index * 0.1,
        ease: "power2.out"
      });
    }
  });
});

</script>